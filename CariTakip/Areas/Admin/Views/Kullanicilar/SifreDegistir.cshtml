@model CariTakip.Areas.Admin.ViewModels.KullanicilarSifreDegistir

<h1 style="text-align: center; color: #ffffff;">Kullanıcı Şifre Değiştir</h1>
<hr />

    @using (Html.BeginForm())
    {
        
        
           <div class="form-group">
            @Html.LabelFor(x => x.Sifre, new { @style = "color:#ffffff" })
            @Html.PasswordFor(x => x.Sifre, new { @class = "form-control" ,@required="required", @maxlength = "12", @placeholder = "Henüz bir Şifre girilmedi." })
        </div>


        <div class="form-group">
            <input type="submit" value="Sifre Değiştirme" class="btn btn-success" />

            <a href="@Url.Action("Index")" class="btn btn-primary pull-right">Geri Dön</a>
        </div>
    }


