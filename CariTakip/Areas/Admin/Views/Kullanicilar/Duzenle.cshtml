@model CariTakip.Areas.Admin.ViewModels.KullanicilarDuzenle

<h1 style="text-align: center; color: #ffffff;">Kullanıcı Düzenle</h1>
<hr />

    @using (Html.BeginForm())
    {
        @Html.ValidationSummary()
        <div class="form-group">

            @Html.LabelFor(x => x.Adi, new { @style="color:#ffffff"})
            @Html.TextBoxFor(x => x.Adi, new { @class = "form-control", @maxlength = "20" })
        </div>
        

       <div class="form-group">
           @Html.Label("Roller", new { @style = "color:#ffffff" })
           @Html.DropDownList("RolID", null, new { @class = "form-control" })
        </div>



        <div class="form-group">
            <input type="submit" value="Düzelt" class="btn btn-success" />

            <a href="@Url.Action("Index")" class="btn btn-primary pull-right">Geri Dön</a>
        </div>
    }

