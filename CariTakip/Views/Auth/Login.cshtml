@model CariTakip.ViewModels.AuthLogin


<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4"style ="background-color:rgba(0, 0, 0, 0.00);padding:15px">
        @using (Html.BeginForm())
        {
                @Html.ValidationSummary(false)
    
            <div class="form-group">
            @Html.Label("Kullanıcı Adı", new { @style="color:#ffffff"})
            @Html.TextBoxFor(x => x.Adi, new { @class="form-control"})
            </div>
            <div class="form-group">
            @Html.Label("Şifre" ,new { @style="color:#ffffff"})
            @Html.PasswordFor(x => x.Sifre, new { @class = "form-control" })
            </div>
            <div class="form-group">
             <input type="submit" value="Giriş Yap" class="btn btn-primary" />
            </div>
        }
        
    </div>

    <div class="col-md-4"></div>
</div>