@model CariTakip.ViewModels.KasaDuzenle


<h1 style="text-align:center;color:#ffffff;">Kasa Düzenle: @Model.MusteriAdi @Model.MusteriSoyadi </h1>


    @using (Html.BeginForm("KasaDuzenle", "Musteri", FormMethod.Post))
    {
     
                @Html.ValidationSummary()
        <div class="form-group">
            @Html.Label("Tarih", new { @style = "color:#ffffff" })
            @Html.TextBoxFor(x => x.Tarih , "{0:yyyy-MM-ddTHH:mm:ss}", new { @class = "form-control", @type = "datetime-local" })
        </div>
        <div class="form-group">
            @Html.Label("Açıklama", new { @style = "color:#ffffff" })
            @Html.TextBoxFor(x => x.Aciklama, new { @class = "form-control" })
        </div>
           <div class="form-group">
            @Html.Label("Ödeme Şekli", new { @style = "color:#ffffff" })
            @Html.DropDownList("OdemeID", ViewBag.OdemeID as SelectList, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.Label("Tür", new { @style = "color:#ffffff" })
            @Html.DropDownList("TurID", ViewBag.TurID as SelectList, new { @class = "form-control" })
        </div>
     
        <div class="form-group">
            @Html.Label("Verilen", new { @style = "color:#ffffff" })
            @Html.TextBoxFor(x => x.Verilen, new { @class = "form-control" , @maxlength = "10" })
        </div>
        <div class="form-group">
            @Html.Label("Alınan", new { @style = "color:#ffffff" })
            @Html.TextBoxFor(x => x.Alinan, new { @class = "form-control", @maxlength = "10" })
        </div>


        


        <div class="form-group">
            <input type="submit" value="Duzenle" class="btn btn-warning" />
            <a href="@Url.Action("KasaIndex", "Musteriler", new {Id=Model.MusteriID})" class="btn btn-primary pull-right">Geri Dön</a>
        </div>
    }


